@model List<KulturTravelMVC.Models.User>
@{
    ViewBag.Title = "Kullanıcı Yönetimi | Kültür Travel";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css"  />
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
        }
        .user-table {
            width: 100%;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .user-table th {
            background: #0077b6;
            color: white;
            padding: 15px;
            text-align: left;
        }
        .user-table td {
            padding: 15px;
            border-bottom: 1px solid #e0e0e0;
        }
        .btn-delete {
            background: #dc3545;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header style="background-color: #0c3563 !important; color: white !important; text-align: center; padding: 15px 0;">
        <h1>Kültür Travel - Admin Paneli</h1>
    </header>

    <nav style="background-color: #417fae !important; display: flex; justify-content: center; gap: 30px; padding: 10px;">
        @Html.ActionLink("Otel Yönetimi", "Dashboard", "Admin", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Kullanıcı Yönetimi", "Users", "Admin", null, new { @class = "active", style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Çıkış Yap", "Logout", "Admin", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
    </nav>

    <div class="admin-container">
        <h2 style="color: #0077b6; margin-bottom: 30px;">Kullanıcı Yönetimi</h2>

        @if (TempData["Message"] != null)
        {
            <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                @TempData["Message"]
            </div>
        }

        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>E-posta</th>
                    <th>Rol</th>
                    <th>Kayıt Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 30px; color: #666;">
                            Henüz kullanıcı bulunmamaktadır.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@user.CreatedAt.ToString("dd MMMM yyyy")</td>
                            <td>
                                <form method="post" action="@Url.Action("DeleteUser")" style="display: inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn-delete" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>


