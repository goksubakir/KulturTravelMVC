    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        let selectedStars = 0;
        
        // Sayfa y√ºklendiƒüinde yƒ±ldƒ±z sembollerini ekle
        $(document).ready(function() {
            // Otel yƒ±ldƒ±zlarƒ±nƒ± ekle
            var hotelStars = @Model.StarRating;
            var starsHtml = '';
            for (var i = 0; i < hotelStars; i++) {
                starsHtml += '‚òÖ';
            }
            $('.stars-large').html(starsHtml);
            
            // Rating yƒ±ldƒ±zlarƒ±nƒ± ekle
            $('.rating-stars').each(function() {
                var stars = $(this).attr('data-stars');
                if (stars) {
                    var starsHtml = '';
                    for (var i = 0; i < parseInt(stars); i++) {
                        starsHtml += '‚òÖ';
                    }
                    $(this).html(starsHtml);
                }
            });
        });
        
        function changeMainImage(imgSrc) {
            document.getElementById('mainImage').src = imgSrc;
        }
        
        $('.star-rating span').hover(function() {
            let star = $(this).data('star');
            $('.star-rating span').each(function(index) {
                if (index < star) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        }, function() {
            $('.star-rating span').each(function(index) {
                if (index >= selectedStars) {
                    $(this).removeClass('active');
                }
            });
        });

        $('.star-rating span').click(function() {
            selectedStars = $(this).data('star');
            $('.star-rating span').each(function(index) {
                if (index < selectedStars) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        });

        function selectRoom(roomId) {
            document.getElementById('room' + roomId).checked = true;
            $('.room-card').removeClass('selected');
            $(event.currentTarget).addClass('selected');
        }

        // Guest count management
        var adultsCount = 1;
        var childrenCount = 0;

        function changeGuests(type, delta) {
            if (type === 'adults') {
                var newValue = adultsCount + delta;
                if (newValue >= 1 && newValue <= 10) {
                    adultsCount = newValue;
                    $('#adultsCount').text(adultsCount);
                    $('#adults').val(adultsCount);
                }
            } else if (type === 'children') {
                var newValue = childrenCount + delta;
                if (newValue >= 0 && newValue <= 6) {
                    childrenCount = newValue;
                    $('#childrenCount').text(childrenCount);
                    $('#children').val(childrenCount);
                }
            }
            updateTotalGuests();
            updateGuestButtons();
        }

        function updateTotalGuests() {
            var total = adultsCount + childrenCount;
            $('#totalGuests').text(total);
            $('#guests').val(total);
            var guestText = total === 1 ? 'guest' : 'guests';
            $('.guest-total').html('Total: <span id="totalGuests">' + total + '</span> ' + guestText);
        }

        function updateGuestButtons() {
            // Adults buttons
            if (adultsCount <= 1) {
                $('.guest-row:first-child .guest-btn.minus').prop('disabled', true);
            } else {
                $('.guest-row:first-child .guest-btn.minus').prop('disabled', false);
            }
            if (adultsCount >= 10) {
                $('.guest-row:first-child .guest-btn.plus').prop('disabled', true);
            } else {
                $('.guest-row:first-child .guest-btn.plus').prop('disabled', false);
            }

            // Children buttons
            if (childrenCount <= 0) {
                $('.guest-row:nth-child(2) .guest-btn.minus').prop('disabled', true);
            } else {
                $('.guest-row:nth-child(2) .guest-btn.minus').prop('disabled', false);
            }
            if (childrenCount >= 6) {
                $('.guest-row:nth-child(2) .guest-btn.plus').prop('disabled', true);
            } else {
                $('.guest-row:nth-child(2) .guest-btn.plus').prop('disabled', false);
            }
        }

        // Initialize on page load
        $(document).ready(function() {
            updateGuestButtons();
        });

        // Check-in tarihi deƒüi≈ütiƒüinde check-out'un minimum deƒüerini ayarla
        $('#checkIn').on('change', function() {
            var checkInDate = new Date($(this).val());
            if (checkInDate) {
                checkInDate.setDate(checkInDate.getDate() + 1);
                var minDate = checkInDate.toISOString().split('T')[0];
                $('#checkOut').attr('min', minDate);
                if ($('#checkOut').val() && new Date($('#checkOut').val()) <= new Date($(this).val())) {
                    $('#checkOut').val(minDate);
                }
            }
        });

        // Form g√∂nderimini kontrol et
        $('#reservationForm').on('submit', function(e) {
            var checkIn = $('#checkIn').val();
            var checkOut = $('#checkOut').val();
            var guests = $('#guests').val();
            var roomId = $('input[name="roomId"]:checked').val();

            // T√ºm alanlarƒ±n dolu olduƒüunu kontrol et
            if (!checkIn || checkIn.trim() === '') {
                e.preventDefault();
                alert('Please select a check-in date!');
                $('#checkIn').focus();
                return false;
            }

            if (!checkOut || checkOut.trim() === '') {
                e.preventDefault();
                alert('Please select a check-out date!');
                $('#checkOut').focus();
                return false;
            }

            if (!guests || guests <= 0) {
                e.preventDefault();
                alert('Please select at least one guest!');
                return false;
            }

            if (!roomId) {
                e.preventDefault();
                alert('Please select a room!');
                return false;
            }

            // Tarih validasyonu
            var checkInDate = new Date(checkIn);
            var checkOutDate = new Date(checkOut);

            if (checkOutDate <= checkInDate) {
                e.preventDefault();
                alert('Check-out date must be after check-in date!');
                $('#checkOut').focus();
                return false;
            }

            // Form g√∂nderiminden √∂nce t√ºm alanlarƒ±n doƒüru olduƒüundan emin ol
            console.log('Form submitting with:', {
                hotelId: $('input[name="hotelId"]').val(),
                roomId: roomId,
                checkIn: checkIn,
                checkOut: checkOut,
                adults: $('input[name="adults"]').val(),
                children: $('input[name="children"]').val(),
                guests: guests
            });

            return true;
        });

        function submitRating() {
            if (selectedStars === 0) {
                alert('Please select a star rating!');
                return;
            }

            let comment = $('#ratingComment').val();
            
            $.post('/Rating/AddRating', {
                hotelId: @Model.Id,
                stars: selectedStars,
                comment: comment
            }, function(response) {
                if (response.success) {
                    alert(response.message);
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
    </script>
