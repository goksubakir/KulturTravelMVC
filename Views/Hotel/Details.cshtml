<body>
    <header style="background-color: #0c3563 !important; color: white !important; text-align: center; padding: 15px 0;">
        <h1>K√ºlt√ºr Travel & Tourism</h1>
    </header>

    <nav style="background-color: #417fae !important; display: flex; justify-content: center; gap: 30px; padding: 10px;">
        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Otel Ara", "Search", "Hotel", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Hakkƒ±mƒ±zda", "About", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("ƒ∞leti≈üim", "Contact", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Giri≈ü Yap", "Login", "Auth", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
    </nav>

    <div class="hotel-details">
        <div class="hotel-header">
            <div class="hotel-header-content">
                <div class="hotel-images">
                    <div class="main-image-wrapper">
                        <img src="@(Model.Images != null && Model.Images.FirstOrDefault() != null ? Model.Images.FirstOrDefault() : "/Content/images/otel1.jpg")" 
                             alt="@Model.Name" 
                             class="main-image" 
                             id="mainImage" />
                    </div>
                    @if (Model.Images != null && Model.Images.Count > 1)
                    {
                        <div class="image-gallery">
                            @foreach (var img in Model.Images.Take(3))
                            {
                                <img src="@img" alt="@Model.Name" class="gallery-thumb" onclick="changeMainImage('@img')" />
                            }
                        </div>
                    }
                </div>
                
                <div class="hotel-info-header">
                    <h2 class="hotel-title">@Model.Name</h2>
                    <p class="hotel-location">üìç @Model.Address, @Model.City, @Model.Country</p>
                    
                    <div class="hotel-rating-section">
                        <span class="stars-large" data-stars="@Model.StarRating"></span>
                        <span class="rating-info">(@Model.AverageRating.ToString("F1") - @Model.TotalRatings reviews)</span>
                    </div>
                    
                    <p class="hotel-description">@Model.Description</p>
                    
                    <div class="price-display">
                        <div class="price-label">Starting Price</div>
                        <div class="price-amount">@Model.PricePerNight.ToString("N0") <span class="price-unit">‚Ç∫ / night</span></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="room-selection">
            <h3>Room Selection</h3>
            <form id="reservationForm" method="post" action="@Url.Action("SelectRoom", "Hotel")">
                <input type="hidden" name="hotelId" value="@Model.Id" />
                
                <div class="date-inputs">
                    <div class="date-input-group">
                        <label>üìÖ Check-in Date</label>
                        <input type="date" name="checkIn" id="checkIn" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="date-input-group">
                        <label>üìÖ Check-out Date</label>
                        <input type="date" name="checkOut" id="checkOut" required min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="date-input-group guests-selector">
                        <label>üë• Guests</label>
                        <div class="guests-dropdown">
                            <div class="guest-row">
                                <span class="guest-label">Adults</span>
                                <div class="guest-controls">
                                    <button type="button" class="guest-btn minus" onclick="changeGuests('adults', -1)">‚àí</button>
                                    <span id="adultsCount">1</span>
                                    <button type="button" class="guest-btn plus" onclick="changeGuests('adults', 1)">+</button>
                                </div>
                            </div>
                            <div class="guest-row">
                                <span class="guest-label">Children</span>
                                <div class="guest-controls">
                                    <button type="button" class="guest-btn minus" onclick="changeGuests('children', -1)">‚àí</button>
                                    <span id="childrenCount">0</span>
                                    <button type="button" class="guest-btn plus" onclick="changeGuests('children', 1)">+</button>
                                </div>
                            </div>
                            <div class="guest-total">
                                Total: <span id="totalGuests">1</span> guest
                            </div>
                            <div class="guest-note">
                                Children are charged at 50% of the adult rate.
                            </div>
                        </div>
                        <input type="hidden" name="adults" id="adults" value="1" />
                        <input type="hidden" name="children" id="children" value="0" />
                        <input type="hidden" name="guests" id="guests" value="1" />
                    </div>
                </div>
                
                @foreach (var room in Model.Rooms)
                {
                    <div class="room-card" onclick="selectRoom(@room.Id)">
                        <label>
                            <input type="radio" name="roomId" value="@room.Id" id="room@room.Id" required />
                            <div class="room-info">
                                <div class="room-type">@room.Type</div>
                                <p class="room-description">@room.Description</p>
                                <p class="room-capacity">Maximum @room.MaxGuests guests</p>
                                @if (room.Amenities != null && room.Amenities.Any())
                                {
                                    <div class="room-amenities">
                                        @foreach (var amenity in room.Amenities)
                                        {
                                            <span class="amenity-badge">@amenity</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="room-price">
