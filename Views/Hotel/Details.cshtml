@model KulturTravelMVC.Models.Hotel
@{
    ViewBag.Title = Model.Name + " | K√ºlt√ºr Travel";
    Layout = null;
    var ratings = ViewBag.Ratings as List<KulturTravelMVC.Models.Rating> ?? new List<KulturTravelMVC.Models.Rating>();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css"  />
    <style>
        .hotel-details {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
        }
        .hotel-header {
            display: flex;
            gap: 30px;
            margin-bottom: 30px;
        }
        .hotel-images {
            flex: 1;
        }
        .main-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 12px;
        }
        .hotel-info-header {
            flex: 1;
        }
        .hotel-title {
            color: #0077b6;
            font-size: 32px;
            margin-bottom: 10px;
        }
        .room-selection {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-top: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .room-card {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            transition: border-color 0.3s;
        }
        .room-card:hover {
            border-color: #0077b6;
        }
        .room-card.selected {
            border-color: #0077b6;
            background: #f0f8ff;
        }
        .rating-section {
            margin-top: 30px;
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .star-rating {
            font-size: 30px;
            cursor: pointer;
            color: #ddd;
        }
        .star-rating.active {
            color: #ffd60a;
        }
        .date-inputs {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>K√ºlt√ºr Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Anasayfa", "Index", "Home")
        @Html.ActionLink("Otel Ara", "Search", "Hotel")
        @Html.ActionLink("Hakkƒ±mƒ±zda", "About", "Home")
        @Html.ActionLink("ƒ∞leti≈üim", "Contact", "Home")
        @Html.ActionLink("Giri≈ü Yap", "Login", "Auth")
    </nav>

    <div class="hotel-details">
        <div class="hotel-header">
            <div class="hotel-images">
                <img src="@(Model.Images.FirstOrDefault() ?? "/images/1.png")" alt="@Model.Name" class="main-image" />
            </div>
            <div class="hotel-info-header">
                <h2 class="hotel-title">@Model.Name</h2>
                <p style="color: #666; font-size: 18px;">üìç @Model.Address, @Model.City, @Model.Country</p>
                <div style="margin: 20px 0;">
                    <span style="font-size: 24px; color: #ffd60a;">@string.Concat(Enumerable.Repeat("‚≠ê", Model.StarRating))</span>
                    <span style="margin-left: 10px;">(@Model.AverageRating.ToString("F1") - @Model.TotalRatings deƒüerlendirme)</span>
                </div>
                <p style="color: #666; line-height: 1.8; margin-top: 20px;">@Model.Description</p>
                <div style="font-size: 32px; color: #0077b6; font-weight: 600; margin-top: 20px;">
                    @Model.PricePerNight.ToString("N0") <span style="font-size: 18px; color: #666;">‚Ç∫ / gece</span>
                </div>
            </div>
        </div>

        <div class="room-selection">
            <h3 style="color: #0077b6; margin-bottom: 20px;">Oda Se√ßimi</h3>
            <form id="reservationForm" method="post" action="@Url.Action("SelectRoom", "Hotel")">
                <input type="hidden" name="hotelId" value="@Model.Id" />
                
                <div class="date-inputs">
                    <div>
                        <label>Giri≈ü Tarihi</label>
                        <input type="date" name="checkIn" id="checkIn" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div>
                        <label>√áƒ±kƒ±≈ü Tarihi</label>
                        <input type="date" name="checkOut" id="checkOut" required min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                    </div>
                </div>
                
                <div style="margin: 20px 0;">
                    <label>Ki≈üi Sayƒ±sƒ±</label>
                    <input type="number" name="guests" id="guests" min="1" max="10" value="2" required />
                </div>

                @foreach (var room in Model.Rooms)
                {
                    <div class="room-card" onclick="selectRoom(@room.Id)">
                        <input type="radio" name="roomId" value="@room.Id" id="room@room.Id" required />
                        <label for="room@room.Id" style="cursor: pointer; width: 100%;">
                            <strong style="color: #0077b6; font-size: 20px;">@room.Type</strong>
                            <p style="color: #666; margin: 10px 0;">@room.Description</p>
                            <p style="color: #666;">Max @room.MaxGuests ki≈üi</p>
                            <div style="margin-top: 10px;">
                                <strong style="color: #0077b6; font-size: 24px;">@room.PricePerNight.ToString("N0") ‚Ç∫</strong> <span style="color: #666;">/ gece</span>
                            </div>
                        </label>
                    </div>
                }

                <button type="submit" style="background: #0077b6; color: white; padding: 15px 40px; border: none; border-radius: 8px; font-size: 18px; font-weight: 600; cursor: pointer; margin-top: 20px;">
                    Rezervasyon Yap
                </button>
            </form>
        </div>

        <div class="rating-section">
            <h3 style="color: #0077b6; margin-bottom: 20px;">Deƒüerlendirmeler</h3>
            
            <div id="ratingForm" style="margin-bottom: 30px; padding: 20px; background: #f9f9f9; border-radius: 8px;">
                <h4>Otel Hakkƒ±nda Ne D√º≈ü√ºn√ºyorsunuz?</h4>
                <div class="star-rating" id="starRating">
                    <span data-star="1">‚≠ê</span>
                    <span data-star="2">‚≠ê</span>
                    <span data-star="3">‚≠ê</span>
                    <span data-star="4">‚≠ê</span>
                    <span data-star="5">‚≠ê</span>
                </div>
                <textarea id="ratingComment" placeholder="Yorumunuz (opsiyonel)" style="width: 100%; padding: 10px; margin-top: 10px; border-radius: 8px; border: 2px solid #e0e0e0;"></textarea>
                <button onclick="submitRating()" style="background: #0077b6; color: white; padding: 10px 30px; border: none; border-radius: 8px; margin-top: 10px; cursor: pointer;">
                    Deƒüerlendirme G√∂nder
                </button>
            </div>

            <div id="ratingsList">
                @foreach (var rating in ratings)
                {
                    <div style="border-bottom: 1px solid #e0e0e0; padding: 15px 0;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                        <strong>@rating.UserName</strong>
                        <span style="color: #ffd60a;">@string.Concat(Enumerable.Repeat("‚≠ê", rating.Stars))</span>
                    </div>
                    @if (!string.IsNullOrEmpty(rating.Comment))
                    {
                        <p style="color: #666;">@rating.Comment</p>
                    }
                    <small style="color: #999;">@rating.CreatedAt.ToString("dd MMMM yyyy")</small>
                </div>
                }
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkƒ±mƒ±zda", "About", "Home") |
            @Html.ActionLink("Bize Ula≈üƒ±n", "Contact", "Home") |
            <a href="#">Gizlilik Politikasƒ±</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 K√ºlt√ºr Travel Portal. T√ºm Haklarƒ± Saklƒ±dƒ±r.</p>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        let selectedStars = 0;
        
        $('.star-rating span').hover(function() {
            let star = $(this).data('star');
            $('.star-rating span').each(function(index) {
                if (index < star) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        });

        $('.star-rating span').click(function() {
            selectedStars = $(this).data('star');
            $('.star-rating span').each(function(index) {
                if (index < selectedStars) {
                    $(this).addClass('active');
                } else {
                    $(this).removeClass('active');
                }
            });
        });

        function selectRoom(roomId) {
            document.getElementById('room' + roomId).checked = true;
            $('.room-card').removeClass('selected');
            $(event.currentTarget).addClass('selected');
        }

        function submitRating() {
            if (selectedStars === 0) {
                alert('L√ºtfen yƒ±ldƒ±z se√ßin!');
                return;
            }

            let comment = $('#ratingComment').val();
            
            $.post('/Rating/AddRating', {
                hotelId: @Model.Id,
                stars: selectedStars,
                comment: comment
            }, function(response) {
                if (response.success) {
                    alert(response.message);
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
    </script>
</body>
</html>

