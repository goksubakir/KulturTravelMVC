@model KulturTravelMVC.Models.SearchViewModel
@{
    ViewBag.Title = "Otel Ara | Kültür Travel";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
    <style>
        .search-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .search-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                margin-bottom: 8px;
                font-weight: 500;
                color: #0077b6;
            }

            .form-group input, .form-group select {
                padding: 12px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 15px;
            }

                .form-group input:focus, .form-group select:focus {
                    outline: none;
                    border-color: #0077b6;
                }

        .search-btn {
            grid-column: 1 / -1;
            background: #0077b6;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
        }

            .search-btn:hover {
                background: #023e8a;
            }
    </style>
</head>
<body>
    <header>
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Anasayfa", "Index", "Home")
        @Html.ActionLink("Otel Ara", "Search", "Hotel", null, new { @class = "active" })
        @Html.ActionLink("Hakkımızda", "About", "Home")
        @Html.ActionLink("İletişim", "Contact", "Home")
        @Html.ActionLink("Giriş Yap", "Login", "Auth")
    </nav>

    <div class="search-container">
        <h2 style="text-align: center; color: #0077b6; margin-bottom: 30px;">Otel Ara</h2>
        @using (Html.BeginForm("List", "Hotel", FormMethod.Post, new { @class = "search-form" }))
        {
            <div class="form-group">
                <label>Ülke</label>
                @Html.DropDownListFor(m => m.Country, new SelectList(ViewBag.Countries as System.Collections.IEnumerable ?? new List<string>(), (Model != null ? Model.Country : null)), "Tüm Ülkeler", new { @id = "countrySelect", @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Şehir</label>
                <select id="citySelect" name="City">
                    <option value="">Tüm Şehirler</option>
                </select>
            </div>
            <div class="form-group">
                <label>Giriş Tarihi</label>
                @Html.TextBoxFor(m => m.CheckInDate, new { @type = "date", @min = DateTime.Now.ToString("yyyy-MM-dd"), @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Çıkış Tarihi</label>
                @Html.TextBoxFor(m => m.CheckOutDate, new { @type = "date", @min = DateTime.Now.AddDays(1).ToString("yyyy-MM-dd"), @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Kişi Sayısı</label>
                @Html.TextBoxFor(m => m.NumberOfGuests, new { @type = "number", @min = "1", @max = "10", @value = "2", @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Min Fiyat (₺)</label>
                @Html.TextBoxFor(m => m.MinPrice, new { @type = "number", @min = "0", @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Max Fiyat (₺)</label>
                @Html.TextBoxFor(m => m.MaxPrice, new { @type = "number", @min = "0", @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Yıldız</label>
                @Html.DropDownListFor(m => m.StarRating, new SelectList(new[] { new { Value = "", Text = "Tümü" }, new { Value = "5", Text = "5 Yıldız" }, new { Value = "4", Text = "4 Yıldız" }, new { Value = "3", Text = "3 Yıldız" } }, "Value", "Text", (Model != null ? Model.StarRating : null)), new { @class = "form-control" })
            </div>
            <button type="submit" class="search-btn">Otel Ara</button>
        }

        <div style="text-align: center; margin-top: 20px;">
            <a href="@Url.Action("List", "Hotel")"
               style="color: #0077b6; text-decoration: none; font-weight: 600; padding: 10px 20px; border: 2px solid #0077b6; border-radius: 8px; display: inline-block;">
                Tüm Otelleri Gör (@(ViewBag.TotalHotels != null ? ViewBag.TotalHotels : 0) otel)
            </a>
        </div>
    </div>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")"></script>
    <script>
        $(document).ready(function() {
            $('#countrySelect').change(function() {
                var country = $(this).val();
                if (country) {
                    $.get('@Url.Action("GetCities", "Hotel")', { country: country }, function(cities) {
                        $('#citySelect').empty();
                        $('#citySelect').append('<option value="">Tüm Şehirler</option>');
                        cities.forEach(function(city) {
                            $('#citySelect').append('<option value="' + city + '">' + city + '</option>');
                        });
                    });
                } else {
                    $('#citySelect').empty();
                    $('#citySelect').append('<option value="">Tüm Şehirler</option>');
                }
            });
        });
    </script>
</body>
</html>