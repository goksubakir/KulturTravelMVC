@{
    ViewBag.Title = "Giriş Yap | Kültür Travel";
    Layout = null; // Login sayfası kendi layout'unu kullanıyor
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Content/login.css")" />
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h2>Hoş Geldiniz</h2>
            <p class="subtitle">Hesabınıza giriş yapın</p>
            <form onsubmit="return loginUser()">
                <label for="loginEmail">E-posta:</label>
                <input type="email" id="loginEmail" required />

                <label for="loginPassword">Şifre:</label>
                <input type="password" id="loginPassword" required />

                <button type="submit">Giriş Yap</button>
            </form>
            <p class="small-text">
                Hesabınız yok mu? @Html.ActionLink("Kayıt Ol", "Signup", "Auth")
            </p>
            <p class="small-text">
                @Html.ActionLink("Ana Sayfaya Dön", "Index", "Home")
            </p>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/login.js")"></script>
</body>
</html>
