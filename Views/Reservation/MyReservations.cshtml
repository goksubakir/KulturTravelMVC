@model List<KulturTravelMVC.Models.Reservation>
@{
    ViewBag.Title = "My Reservations | Kültür Travel";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="~/Content/index.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: #f8f9fa;
        }
        .main-content {
            flex: 1;
        }
        .reservations-container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 30px;
            padding-bottom: 60px;
        }
        .page-title {
            color: #0077b6;
            margin-bottom: 30px;
            font-size: 2rem;
            text-align: center;
        }
        .reservation-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 25px;
            overflow: hidden;
            display: flex;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .reservation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }
        .hotel-image {
            width: 280px;
            height: 220px;
            object-fit: cover;
            flex-shrink: 0;
        }
        .reservation-content {
            flex: 1;
            padding: 25px;
            display: flex;
            flex-direction: column;
        }
        .reservation-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
        }
        .reservation-hotel {
            font-size: 1.5rem;
            font-weight: 600;
            color: #0077b6;
        }
        .reservation-status {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        .reservation-info {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 20px;
        }
        .info-item {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #555;
            font-size: 0.95rem;
        }
        .info-item svg {
            width: 20px;
            height: 20px;
            color: #0096c7;
            flex-shrink: 0;
        }
        .info-item strong {
            color: #333;
        }
        .reservation-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }
        .reservation-price {
            font-size: 1.6rem;
            font-weight: 700;
            color: #023e8a;
        }
        .reservation-date {
            font-size: 0.85rem;
            color: #888;
        }
        .no-reservations {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .no-reservations svg {
            width: 100px;
            height: 100px;
            color: #ccc;
            margin-bottom: 25px;
        }
        .no-reservations h3 {
            color: #666;
            margin-bottom: 15px;
            font-size: 1.5rem;
        }
        .no-reservations p {
            color: #999;
            margin-bottom: 30px;
            font-size: 1.1rem;
        }
        .btn-search {
            display: inline-block;
            background: linear-gradient(135deg, #0077b6 0%, #023e8a 100%);
            color: white;
            padding: 14px 35px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 119, 182, 0.4);
        }
        footer {
            background: #03045e;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 0.95rem;
            margin-top: auto;
        }
        .footer-links {
            margin-bottom: 8px;
        }
        .footer-links a {
            color: #90e0ef;
            text-decoration: none;
            margin: 0 6px;
            transition: color 0.2s ease;
        }
        .footer-links a:hover {
            color: #f5f5f1;
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .reservation-card {
                flex-direction: column;
            }
            .hotel-image {
                width: 100%;
                height: 180px;
            }
            .reservation-info {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header style="background-color: #0c3563 !important; color: white !important; text-align: center; padding: 15px 0;">
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav style="background-color: #417fae !important; display: flex; justify-content: center; gap: 30px; padding: 10px;">
        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Otel Ara", "Search", "Hotel", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Hakkımızda", "About", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("İletişim", "Contact", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Giriş Yap", "Login", "Auth", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
    </nav>

    <div class="main-content">
        <div class="reservations-container">
            <h1 class="page-title">My Reservations</h1>

            @if (Model != null && Model.Count > 0)
            {
                foreach (var reservation in Model)
                {
                    <div class="reservation-card">
                        <img src="/Content/images/otel@(reservation.HotelId).jpg" 
                             alt="@reservation.HotelName" 
                             class="hotel-image"
                             onerror="this.src='/Content/images/otel1.jpg'">
                        <div class="reservation-content">
                            <div class="reservation-header">
                                <div class="reservation-hotel">@reservation.HotelName</div>
                                <span class="reservation-status status-confirmed">Confirmed</span>
                            </div>
                            <div class="reservation-info">
                                <div class="info-item">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    <span>Check-in: <strong>@reservation.CheckInDate.ToString("dd MMMM yyyy")</strong></span>
                                </div>
                                <div class="info-item">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    <span>Check-out: <strong>@reservation.CheckOutDate.ToString("dd MMMM yyyy")</strong></span>
                                </div>
                                <div class="info-item">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                    <span>Room: <strong>@reservation.RoomType</strong></span>
                                </div>
                                <div class="info-item">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                    </svg>
                                    <span>Guests: <strong>@reservation.NumberOfGuests</strong></span>
                                </div>
                            </div>
                            <div class="reservation-footer">
                                <div class="reservation-price">
                                    @reservation.TotalPrice.ToString("N0") ₺
                                </div>
                                <div class="reservation-date">
                                    Reservation: @reservation.CreatedAt.ToString("dd MMMM yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-reservations">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                    </svg>
                    <h3>You don't have any reservations yet</h3>
                    <p>Start searching for hotels to plan your dream vacation!</p>
                    <a href="@Url.Action("Search", "Hotel")" class="btn-search">Search Hotels</a>
                </div>
            }
        </div>
    </div>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <!-- AUTH JS (Oturum kontrolü) -->
    <script src="@Url.Content("~/Scripts/auth.js")"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const user = JSON.parse(localStorage.getItem('user') || '{}');
            const loggedIn = localStorage.getItem('loggedIn');
            
            if (loggedIn !== 'true' || !user.email) {
                alert('Please log in to view your reservations.');
                window.location.href = '/Auth/Login';
            } else {
                fetch('/Auth/SetSession', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `email=${encodeURIComponent(user.email)}&name=${encodeURIComponent(user.fullname)}`
                }).then(response => {
                    if (response.ok) {
                        if (!sessionStorage.getItem('sessionSynced')) {
                            sessionStorage.setItem('sessionSynced', 'true');
                            window.location.reload();
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>
