@model KulturTravelMVC.Models.Payment
@{
    ViewBag.Title = "Ödeme Başarılı | Kültür Travel";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css"  />
    <style>
        .success-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }
        .success-icon {
            font-size: 80px;
            color: #28a745;
            margin-bottom: 20px;
        }
        .btn-home {
            background: #0077b6;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <header>
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Anasayfa", "Index", "Home")
        @Html.ActionLink("Otel Ara", "Search", "Hotel")
        @Html.ActionLink("Hakkımızda", "About", "Home")
        @Html.ActionLink("İletişim", "Contact", "Home")
        @Html.ActionLink("Giriş Yap", "Login", "Auth")
    </nav>

    <div class="success-container">
        <div class="success-icon">✅</div>
        <h2 style="color: #28a745;">Ödeme Başarılı!</h2>
        <p style="color: #666; margin: 20px 0;">Rezervasyonunuz onaylandı. Ödeme işleminiz tamamlandı.</p>
        @if (Model != null)
        {
            <p><strong>Ödeme ID:</strong> @Model.Id</p>
            <p><strong>Tutar:</strong> @Model.Amount.ToString("N0") ₺</p>
            <p><strong>Tarih:</strong> @Model.PaymentDate.ToString("dd MMMM yyyy HH:mm")</p>
        }
        @Html.ActionLink("Ana Sayfaya Dön", "Index", "Home", null, new { @class = "btn-home" })
    </div>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <script>
        // Save reservation to localStorage when payment is successful
        document.addEventListener('DOMContentLoaded', function() {
            // Get reservation data from sessionStorage (set during reservation creation)
            const reservationData = sessionStorage.getItem('currentReservation');
            if (reservationData) {
                try {
                    const reservation = JSON.parse(reservationData);
                    
                    // Update status to Confirmed
                    reservation.Status = 'Confirmed';
                    reservation.CreatedAt = new Date().toISOString();
                    
                    // Get existing reservations from localStorage
                    const user = JSON.parse(localStorage.getItem('user') || '{}');
                    const userEmail = user.email || '';
                    const storageKey = 'reservations_' + userEmail;
                    
                    let reservations = [];
                    const existingReservations = localStorage.getItem(storageKey);
                    if (existingReservations) {
                        reservations = JSON.parse(existingReservations);
                    }
                    
                    // Add new reservation
                    reservation.Id = reservations.length > 0 ? Math.max(...reservations.map(r => r.Id || 0)) + 1 : 1;
                    reservations.push(reservation);
                    
                    // Save back to localStorage
                    localStorage.setItem(storageKey, JSON.stringify(reservations));
                    
                    // Clear sessionStorage
                    sessionStorage.removeItem('currentReservation');
                    
                    console.log('Reservation saved to localStorage:', reservation);
                } catch (e) {
                    console.error('Error saving reservation:', e);
                }
            }
        });
    </script>
</body>
</html>


