@model KulturTravelMVC.Models.Payment
@{
    ViewBag.Title = "Payment | Kültür Travel";
    Layout = null;
    var reservation = ViewBag.Reservation as KulturTravelMVC.Models.Reservation;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css"  />
    <style>
        body {
            min-height: 100vh;
            margin: 0;
        }
        .payment-container {
            max-width: 800px;
            margin: 30px auto;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .payment-summary {
            background: #f0f8ff;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #0077b6;
        }
        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
        }
        .form-row {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 15px;
        }
        .btn-submit {
            background: #0077b6;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>
    <header style="background-color: #0c3563 !important; color: white !important; text-align: center; padding: 15px 0;">
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav style="background-color: #417fae !important; display: flex; justify-content: center; gap: 30px; padding: 10px;">
        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Otel Ara", "Search", "Hotel", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Hakkımızda", "About", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("İletişim", "Contact", "Home", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
        @Html.ActionLink("Giriş Yap", "Login", "Auth", null, new { style = "color: white !important; text-decoration: none; font-weight: 500;" })
    </nav>

    <div class="payment-container">
        <h2 style="color: #0077b6; margin-bottom: 30px;">Payment</h2>
        
        @if (reservation != null)
        {
            <div class="payment-summary">
                <h3>@reservation.HotelName</h3>
                <p><strong>Total Amount:</strong> <span style="font-size: 28px; color: #0077b6; font-weight: 600;">@reservation.TotalPrice.ToString("N0") ₺</span></p>
            </div>
        }

        <form method="post" action="@Url.Action("ProcessPayment")">
            <input type="hidden" name="ReservationId" value="@Model.ReservationId" />
            <input type="hidden" name="Amount" value="@Model.Amount" />

            <div class="form-group">
                <label>Card Number</label>
                <input type="text" name="CardNumber" id="CardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required />
            </div>

            <div class="form-group">
                <label>Cardholder Name</label>
                <input type="text" name="CardHolderName" id="CardHolderName" placeholder="Full Name" required />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Expiry Date</label>
                    <input type="text" name="ExpiryDate" id="ExpiryDate" placeholder="MM/YY" maxlength="5" required />
                </div>
                <div class="form-group">
                    <label>CVV</label>
                    <input type="text" name="CVV" id="CVV" placeholder="123" maxlength="3" required />
                </div>
            </div>

            <button type="submit" class="btn-submit">Complete Payment</button>
        </form>
    </div>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <script>
        // Session sync
        document.addEventListener('DOMContentLoaded', function() {
            const user = JSON.parse(localStorage.getItem('user') || '{}');
            const loggedIn = localStorage.getItem('loggedIn');
            
            if (loggedIn !== 'true' || !user.email) {
                alert('Please log in to make a payment.');
                window.location.href = '/Auth/Login';
                return;
            }
            
            fetch('/Auth/SetSession', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `email=${encodeURIComponent(user.email)}&name=${encodeURIComponent(user.fullname)}`
            });
        });
        
        // Format card number
        document.getElementById('CardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formatted;
        });

        // Format expiry date
        document.getElementById('ExpiryDate').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });
    </script>
    <!-- AUTH JS (Oturum kontrolü) -->
    <script src="@Url.Content("~/Scripts/auth.js")"></script>
</body>
</html>
