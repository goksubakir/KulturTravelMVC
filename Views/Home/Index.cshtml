@{
    ViewBag.Title = "Kültür Travel | Anasayfa";
    Layout = null; // Kendi header/nav/footer yapısını kullanıyor
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- GENEL CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
    <!-- INDEX SAYFASINA ÖZEL CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/index.css")" />
</head>
<body>
    <header>
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { @class = "active" })
        @Html.ActionLink("Otel Ara", "Search", "Hotel")
        @Html.ActionLink("Hakkımızda", "About", "Home")
        @Html.ActionLink("İletişim", "Contact", "Home")
        @Html.ActionLink("Giriş Yap", "Login", "Auth")
    </nav>

    <section class="hero">
        <div class="slider">
            <img src="@Url.Content("~/Content/images/1.png")" class="active" alt="Slide 1">
            <img src="@Url.Content("~/Content/images/2.png")" alt="Slide 2">
            <img src="@Url.Content("~/Content/images/3.png")" alt="Slide 3">
            <img src="@Url.Content("~/Content/images/4.png")" alt="Slide 4">
            <img src="@Url.Content("~/Content/images/5.png")" alt="Slide 5">
            <img src="@Url.Content("~/Content/images/6.png")" alt="Slide 6">
        </div>

        <div class="hero-text">
            <h2>Hayalinizdeki Tatili Planlayın</h2>
            <p>The hotel you are looking for is just one click away!</p>
            @Html.ActionLink("Keşfetmeye Başla", "Search", "Hotel", null, new { style = "background: #0077b6; color: white; padding: 15px 40px; border-radius: 8px; text-decoration: none; font-weight: 600; display: inline-block; margin-top: 20px;" })
        </div>
    </section>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <!-- INDEX JS -->
    <script src="@Url.Content("~/Scripts/index.js")"></script>
</body>
</html>
