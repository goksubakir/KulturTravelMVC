@{
    ViewBag.Title = "Kültür Travel | Anasayfa";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/wwwroot/css/style.css" />
    <link rel="stylesheet" href="~/wwwroot/css/index.css" />
</head>
<body>
    <header>
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Anasayfa", "Index", "Home", null, new { @class = "active" })
        @Html.ActionLink("Hakkımızda", "About", "Home")
        @Html.ActionLink("İletişim", "Contact", "Home")
        @if (User.Identity.IsAuthenticated)
        {
            <span>Merhaba, @User.Identity.Name</span>
            @Html.ActionLink("Çıkış", "LogOff", "Auth")
        }
        else
        {
            @Html.ActionLink("Giriş Yap", "Login", "Auth")
        }
    </nav>

    <section class="hero">
        <div class="slider">
            <img src="~/wwwroot/images/1.png" class="active" alt="Slide 1" />
            <img src="~/wwwroot/images/2.png" alt="Slide 2" />
            <img src="~/wwwroot/images/3.png" alt="Slide 3" />
            <img src="~/wwwroot/images/4.png" alt="Slide 4" />
            <img src="~/wwwroot/images/5.png" alt="Slide 5" />
            <img src="~/wwwroot/images/6.png" alt="Slide 6" />
        </div>

        <div class="hero-text">
            <h2>Hayalinizdeki Tatili Planlayın</h2>
            <p>The hotel you are looking for is just one click away!</p>
            <button onclick="showAlert()">Keşfetmeye Başla</button>
        </div>
    </section>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("Hakkımızda", "About", "Home") |
            @Html.ActionLink("Bize Ulaşın", "Contact", "Home") |
            <a href="#">Gizlilik Politikası</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; @DateTime.Now.Year Kültür Travel Portal. Tüm Hakları Saklıdır.</p>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/wwwroot/js/index.js"></script>
</body>
</html>
