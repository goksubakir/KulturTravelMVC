@{
    ViewBag.Title = "Kültür Travel | Home";
    Layout = null; // Uses its own header/nav/footer
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- GENEL CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
    <!-- INDEX SAYFASINA ÖZEL CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/index.css")" />
</head>
<body>
    <header>
        <h1>Kültür Travel & Tourism</h1>
    </header>

    <nav>
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })
        @Html.ActionLink("Search Hotels", "Search", "Hotel")
        @Html.ActionLink("About", "About", "Home")
        @Html.ActionLink("Contact", "Contact", "Home")
        @Html.ActionLink("Log In", "Login", "Auth")
    </nav>

    <section class="hero">
        <div class="slider">
            <img src="@Url.Content("~/Content/images/1.png")" class="active" alt="Slide 1">
            <img src="@Url.Content("~/Content/images/2.png")" alt="Slide 2">
            <img src="@Url.Content("~/Content/images/3.png")" alt="Slide 3">
            <img src="@Url.Content("~/Content/images/4.png")" alt="Slide 4">
            <img src="@Url.Content("~/Content/images/5.png")" alt="Slide 5">
            <img src="@Url.Content("~/Content/images/6.png")" alt="Slide 6">
        </div>

        <div class="hero-text">
            <h2>Plan Your Dream Getaway</h2>
            <p>The hotel you’re looking for is just one click away.</p>
            @Html.ActionLink("Start Exploring", "Search", "Hotel", null, new { @class = "primary-cta" })
        </div>
    </section>

    <footer>
        <div class="footer-links">
            @Html.ActionLink("About Us", "About", "Home") |
            @Html.ActionLink("Contact Us", "Contact", "Home") |
            <a href="#">Privacy Policy</a> |
            <a href="#">Instagram</a>
        </div>
        <p>&copy; 2025 Kültür Travel Portal. All Rights Reserved.</p>
    </footer>

    <!-- INDEX JS -->
    <script src="@Url.Content("~/Scripts/index.js")"></script>
</body>
</html>
