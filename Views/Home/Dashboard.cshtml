@{
    ViewBag.Title = "Dashboard";
}

<h2>@ViewBag.Title</h2>
<p>@ViewBag.Message</p>

<div class="jumbotron">
    <h1>Hoş Geldiniz!</h1>
    <p class="lead">Kültür Travel Dashboard'a hoş geldiniz.</p>
    <p>@User.Identity.Name olarak giriş yaptınız.</p>
    @if (User.IsInRole("Admin"))
    {
        <p>@Html.ActionLink("Admin Paneli", "Admin", "Home", null, new { @class = "btn btn-primary btn-lg" })</p>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Profil</h2>
        <p>Profil bilgilerinizi görüntüleyin ve düzenleyin.</p>
    </div>
    <div class="col-md-4">
        <h2>Rezervasyonlar</h2>
        <p>Rezervasyonlarınızı görüntüleyin.</p>
    </div>
    <div class="col-md-4">
        <h2>Ayarlar</h2>
        <p>Hesap ayarlarınızı yönetin.</p>
    </div>
</div>

